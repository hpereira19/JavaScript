alert('Seja bem-vindo ao jogo do Número Secreto');
let numeroSecreto = 9;
console.log(numeroSecreto);
let chute;
let tentativas = 1;

//enquanto chute for diferente de número secreto, continue pedindo um novo chute
while (chute != numeroSecreto) {
chute = prompt('Digite um número de 1 a 10:');
// se o chute não for igual ao número secreto
    if (chute == numeroSecreto) {
        break;
    } else {
        if (chute > numeroSecreto) {
            alert(`O número secreto é menor que ${chute}`);
        } else {
            alert(`O número secreto é maior que ${chute}`);
        }
        //tentativas = tentativas + 1;
        tentativas++
    }
}

let palavraTentativa = tentativas > 1? 'tentativas' : 'tentativa';
alert(Parabéns! Você acertou o número secreto ${numeroSecreto} com ${tentativas} ${palavraTentativa});

